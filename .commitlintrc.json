{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "refactor",
        "test",
        "sample",
        "build",
        "ci",
        "perf",
        "chore"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "core",
        "cli",
        "installer",
        "website",
        "vite",
        "remix-vite",
        "next",
        "vinxi",
        "mdx",
        "markdown",
        "shared"
      ]
    ]
  }
}
