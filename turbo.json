{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["ENABLE_EXPERIMENTAL_COREPACK"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".content-collections/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build", "build"],
      "env": ["CC_OS", "GITHUB_ACTIONS"],
      "outputs": ["coverage/**", "playwright-report/**", "test-results/**"]
    },
    "typecheck": {
      "dependsOn": ["^build", "^test"]
    },
    "check": {
      "dependsOn": ["^test", "^lint"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
