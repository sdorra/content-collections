    "typescript": "^5.5.4",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "@parcel/watcher": "^2.4.1",
    "camelcase": "^8.0.0",
    "esbuild": "^0.21.4",
    "gray-matter": "^4.0.3",
